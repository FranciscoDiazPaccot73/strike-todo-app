{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@store/*": [
        "./store/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@components/*": [
        "./components/*"
      ],
    },
    "types": ["node", "jest", "@types/testing-library__jest-dom"],
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "firebaseConfig.js",
  ],
  "exclude": [
    "node_modules", ".next", "**/*.spec.tsx"
  ],
}
